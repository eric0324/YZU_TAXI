<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginTop="2dp"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/partyInfo_Member_imageView_Sex"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textSize="20dp"
        android:id="@+id/partyInfo_Member_textView_Name"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"

        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/partyInfo_Member_textView_Appraisal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:textColor="@color/black" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/partyInfo_Member_imageView_Main"
            android:layout_margin="3dp"
            android:src="@drawable/partyinfo_member_maintag"
            android:layout_toLeftOf="@+id/partyInfo_Member_imageView_Friend"
            android:visibility="invisible" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/partyInfo_Member_imageView_Friend"
            android:layout_margin="3dp"
            android:src="@drawable/partyinfo_member_friendtag"
            android:layout_alignParentRight="true"
            android:visibility="invisible" />
    </RelativeLayout>
    </LinearLayout>
</LinearLayout>
